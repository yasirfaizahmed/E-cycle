<FloatLayout>







####### divider canvases #######
    canvas:
        Rectangle:
            group: 'a'
            pos: self.center_x - 40, 165
            size: 80, 5

        Rectangle:
            group: 'a'
            pos: self.center_x - 150, 120
            size: 3, 320

        Rectangle:
            group: 'a'
            pos: self.center_x - 75, 300
            size: 170, 5






####### KMS_ran #######
    Label:
        text: str(app.variables["kms_ran"])
        font_name: 'myfont'
        pos_hint: {'x':0.45, 'y':0.6}
        size_hint: None, None
        font_size: 35




####### Battery info #######
    Image:
        source: 'battery.png'
        pos_hint: {'x':0.06, 'y':0.3}
        size_hint: None, None
        size: 150, 280
        allow_stretch: True
        keep_ratio: False

    Label:
        text: app.str_batt_per + '%'
        font_name: 'myfont'
        pos_hint: {'x':0.09, 'y':0.5}
        size_hint: None, None
        font_size: 35

    Label:
        text: app.str_batt_char
        font_name: 'myfont'
        pos_hint: {'x':0.09, 'y':0.05}
        size_hint: None, None
        font_size:30








####### Mileage #######
    Label:
        text: 'Mileage '
        font_name: 'myfont'
        pos_hint: {'x':0.05, 'y':0.15}
        size_hint: None, None
        font_size: 20

    Label:
        text: app.str_mileage
        font_name: 'myfont'
        pos_hint: {'x':0.15, 'y':0.15}
        size_hint: None, None
        font_size: 35




##### Switches ######
    Switch:
        active: False
        on_active: app.headlight_callback(self, self.active)
        pos_hint: {'x':0.25, 'y':0.04}
        size_hint: None, None

    Switch:
        active: False
        #on_active: app.headlight_callback(self, self.active)
        pos_hint: {'x':0.4, 'y':0.04}
        size_hint: None, None

    Switch:
        active: False
        #on_active: app.headlight_callback(self, self.active)
        pos_hint: {'x':0.55, 'y':0.04}
        size_hint: None, None

    Switch:
        active: False
        #on_active: app.headlight_callback(self, self.active)
        pos_hint: {'x':0.7, 'y':0.04}
        size_hint: None, None
